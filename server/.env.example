# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ielts_platform
DB_USER=ielts_user
DB_PASSWORD=ielts_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_REFRESH_EXPIRE=7d

# Email Configuration (for ticket delivery)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=IELTS Platform <noreply@bestcenter.com>

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,mp3,wav

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# WebSocket Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Application Configuration
APP_NAME=IELTS Online Platform
APP_URL=http://localhost:5173
ADMIN_EMAIL=admin@bestcenter.com
SUPPORT_EMAIL=support@bestcenter.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Ticket Configuration
TICKET_EXPIRE_HOURS=24
TICKET_PREFIX=IELTS

# Exam Configuration
EXAM_AUTO_SUBMIT_GRACE=300
EXAM_SESSION_TIMEOUT=7200